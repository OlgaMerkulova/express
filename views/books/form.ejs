<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
               value="<%= book.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <input
                type="text"
                value="<%= book.description %>"
                name="description"
                class="form-control"
                id="inputDesc">
    </div>

    <div class="form-group">
        <label for="inputAuthors">Авторы</label>
        <input
                type="text"
                value="<%= book.authors %>"
                name="authors"
                class="form-control"
                id="inputAuthors"
        >
    </div>

    <div class="form-group">
        <label for="inputFav">Favorite</label>
         <input
                type="text"
                value="<%= book.favorite %>"
                name="favorite"
                class="form-control"
                id="inputFav"
        >
    </div>

    <div class="form-group">
        <label for="inputCover">FileCover</label>
        <input
                type="text"
                value="<%= book.fileCover %>"
                name="fileCover"
                class="form-control"
                id="inputCover"
        >
    </div>

    <div class="form-group">
        <label for="fileName">FileName</label>
        <input
                type="text"
                value="<%= book.fileName %>"
                name="fileName"
                class="form-control"
                id="inputName"
        >
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>