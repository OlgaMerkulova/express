<%- include('../layout/layout-start', {title: title}) %>
<%- include('../layout/menu') %>


<h1><%= title %></h1>
<!-- <a class="btn btn-sm btn-primary" href="books/create">Добавить запись</a> -->

    <% if(books.length) { %>

        <table class="table table-striped table-sm  mt-3">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Заголовок</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
    
                <% books.map((el, idx) => {  %>
                    <tr>
                        <th scope="row"><%= idx +1 %></th>
                        <td><%= el.title %></td>
                        <td class="text-right">
                        </td>
                    </tr>
                <% }) %>
    
            </tbody>
        </table>

    <% } else { %>   
        <h3 class="mt-5">Записей пока нет</h3>
    <% } %>    

    



<%- include('../layout/layout-end') %>